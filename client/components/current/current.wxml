<!--components/current/current.wxml-->
<view class="current">
        <view class="scroll">
            <scroll-view class="scroll-view_H" scroll-x style="width: 100%">
                <view wx:for="{{types}}" wx:key="unique" class="scroll-item" style="color:{{currentTab==index?'#000000':'#999999'}}" bindtap="changeCurrentTab" data-index="{{index}}">{{item.name}}</view>
            </scroll-view>
        </view>
        <view class="swiper">
            <swiper autoplay="false" current="{{currentTab}}" bindchange="bindchangeCurrent">
                <block wx:for="{{types}}" wx:key="unique">
                    <swiper-item>
                        <slot name="{{item.value}}"></slot>
                    </swiper-item>
                </block>
            </swiper>
        </view>
    </view>
