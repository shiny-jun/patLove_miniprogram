/* components/userItem.wxss */
.user-item{
    display: flex;
    align-items: center;
    background-color: #ffffff;
    padding: 15rpx 20rpx;
    border-bottom: 1rpx solid #eeeeee;
}
.avatar{
    width: 100rpx;
    margin-right: 15rpx;
}
.avatar image{
    width: 100rpx;
    border-radius: 50%;
    overflow: hidden;
}
.msg{
    flex: 3;
    font-size: 28rpx;
}
.btns{
    flex: 1;
    text-align: right;
}
.btn{
    width: 100rpx;
    padding: 0;
    height: 46rpx;
    line-height: 46rpx;
    font-size: 30rpx;
    background-color: #ffffff;
    border-radius: 46rpx;
    text-align: center;
  }
  .follow{
    border: 1rpx solid #b93634;
    color: #b93634;
  }
.nofollow{
    border: 1rpx solid #999999;
    color: #999999;
  }