<!--components/searchBar.wxml-->
<view class="search-bar">
   <view class="bar" wx:if="{{!canuse}}">
       <view class="bar-wrapper" bindtap="goSearchPage">
           <i class="iconfont icon-search"></i>
           <input class="input" type="text" disabled />
       </view>
   </view>
   <view class="bar flex" wx:else>
       <view class="bar-wrapper">
           <i class="iconfont icon-search"></i>
           <input class="input" value="{{inpVal}}" type="text" bindblur="handleInput" bindinput="linkInput">
           <i class="iconfont icon-del2" wx:if="{{inpVal}}"></i>
       </view>
       <view class="close" bindtap="handleInput">搜索</view> 
   </view>
</view>
