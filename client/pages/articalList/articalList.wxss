/* pages/articalList/articalList.wxss */
.top-tab{
    width: 100%;
    height: 80rpx;
    padding: 0 200rpx;
    box-sizing: border-box;
    /* border-top: 1rpx solid #eeeeee; */
    box-shadow: 0px 0px 2px 0px rgba(65, 47, 141, 0.1);
    background-color: #ffffff;
  }
  .top-tab .btn{
    padding: 0 40rpx;
    font-size: 32rpx;
    color: #999999;
  }
  .top-tab .active>view{
    color: #000000;
    padding-bottom: 2rpx;
    border-radius: 6rpx;
    border-bottom: 4rpx solid #f8d98f;
  }
  .flex {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
  }
  .actical-wrapper{
      margin: 20rpx;
  }
  .no-more{
    text-align: center;
    color: #999999;
    font-size: 28rpx;
    padding: 30rpx 0 60rpx;
  }