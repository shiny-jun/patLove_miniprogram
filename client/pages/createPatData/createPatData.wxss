.contant {
  display: flex;
  flex-direction: column;
  margin: 30rpx;
  position: relative;
}

.name-input {
  font-size: 50rpx;
  margin-bottom: 30rpx;
  width: 80%;
}

.data-item {
  display: flex;
  flex-direction: row;
  height: 80rpx;
  align-items: center;
  font-size: 28rpx;
}

.data-name {
  font-size: 30rpx;
  margin-right: 15rpx;
  color: #333;
}

.select-item{
  border: 1rpx #999 solid;
  font-size: 28rpx;
  color: #999;
  border-radius: 50rpx;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 120rpx;
  height: 50rpx;
  margin-right: 30rpx;
}

.selected{
  background-color: #999;
  color: white;
}

.weight-input{
  width: 80rpx;
  margin-right: 15rpx;
}
.food-input{
  width: 70%;
}
.sign-input{
  height: 200rpx;
  width: 100%;
  margin: 30rpx 0;
  font-size: 30rpx;
}
.picker-text{
  font-size: 30rpx;
  color: #999;
}
.func{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column
}
.save,.del{
  width: 500rpx;
  height: 70rpx;
  background-color: #f5bc36;
  color: white;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
  border-radius: 50rpx;
}
.del{
  background-color: #c76262;
}
.tips{
  font-size: 28rpx;
  color: #333;
}
.head{
  background-color: #999;
  position: absolute;
  top: 50rpx;
  right: 40rpx;
  width: 200rpx;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  border-radius: 50%;
  overflow:hidden;
}
.icon-dog-astronaut{
color: white;
font-size: 90rpx;
}
.submit-view{
  z-index: 999;
}
.toast-box-wrapper{
  z-index: 999;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.5)
}
.toast-box{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  z-index: 10000;
  width: 60%;
  height: 200rpx;
  text-align: center;
  background-color: #fff;
  border-radius: 10rpx;
}
.toast-box .save,.close{
  display: inline-block;
  width: 45%;
  height: 50rpx;
  line-height: 50rpx;
  background-color: #f5bc36;
  color: white;
  font-size: 28rpx;
  margin-bottom: 10rpx;
  border-radius: 50rpx;
}
.toast-box .save{
  margin-right: 10rpx;
}
.toast-box .close{
  background-color: #999999;
}
.toast-item{
  width: 90%;
  margin: 40rpx auto;
  text-align: left;
  font-size: 28rpx;
}
.add-btn{
  display: inline-block;
  background-color: #f5bc36;
  color: #ffffff;
  text-align: center;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 40rpx;
}