/* pages/addArtical/addArtical.wxss */
@import "/assets/img/font/iconfont.wxss";
.addArtical-wrapper {
  height: 100vh;
  padding: 36rpx;
  box-sizing: border-box;
}

.title {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}
.title input{
  flex: 1;
}
.submit-btn{
  display: inline-block;
  padding: 0;
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  border-radius: 25rpx;
  background-color: #fcc954;
  border: none;
}
.submit-btn::after{
  border: none
}

.content textarea {
  margin: 20rpx 0;
  width: 100%;
  height: 550rpx;
  /* box-shadow: 0px 0px 2px 0px rgba(65, 47, 141, 0.1); */
}

.pat {
  /* padding:0 20rpx; */
  display: flex;
  align-items: middle;
  color: #fff;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.pat-name {
  padding-right: 20rpx;
  color: #999999;
  font-size: 28rpx;
}
.pat .btn {
  width: 200rpx;
  border-radius: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #fcc954;
  color: #fff;
}

/* .pat .icon {
  position: absolute;
  right: 20rpx;
  font-size: 24rpx;
} */

.images {
  border-top: 1rpx solid #f5f5f5;
  padding-top: 10rpx;
}

.images {
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  /* justify-content: center; */
}

.add-pic image, .add-pic-btn image {
  width: 150rpx;
}
.add-pic, .add-pic-btn {
  width: 150rpx;
  text-align: center;
  height: 150rpx;
  line-height: 150rpx;
  display: flex;
  align-items: center;
}
.point{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  text-align: center;
}
.noselect{
  border: 1rpx solid #999;
}
.selected{
  text-align: center;
  color: #fff;
  background-color: #f8d98f;
  border: 1rpx solid #f8d98f;

}
.icon-approved {
  display: flex;
  justify-content: center;
  font-size: 24rpx;
  height: 42rpx;
  line-height: 42rpx;
}
 /* 地区选择 */
.select-location{
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  /* justify-content: center; */
  font-size: 28rpx;
}
