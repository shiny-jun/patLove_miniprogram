.addArtical-wrapper {
  height: 100vh;
  padding: 36rpx;
  box-sizing: border-box;
}

.title {
  font-size: 28rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.content textarea {
  margin: 20rpx 0;
  width: 100%;
  height: 550rpx;
  /* box-shadow: 0px 0px 2px 0px rgba(65, 47, 141, 0.1); */
}

.pat {
  /* padding:0 20rpx; */
  color: #fff;
  font-size: 28rpx;
}

.pat .btn {
  width: 200rpx;
  border-radius: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #f8d98f;
  color: #fff;
}

