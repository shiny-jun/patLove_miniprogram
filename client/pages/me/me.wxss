/* pages/me/me.wxss */

page {
}

.flex {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.head{
  width: 100%;
}
.userinfo {
  height: 260rpx;
  width: 100%;
  background: #fff;
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 180rpx;
  height: 180rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #007aff;
  background-color: white;
}

.userinfo-nickname::after {
  border: none;
}

.userinfo .msg-info{
  flex: 1;
}

.msg-info .part{
  flex: 1;
}

.msg-info .part>view{
  text-align: center;
}

.msg-info .part .num{
  font-size: 32rpx;
  font-weight: bold;
}

.msg-info .part .title{
  font-size: 24rpx;
  color: #999999;
}
.btn-wrapper{
  margin: 16rpx;
}
.btn{
  /* display: inline-block; */
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 28rpx;
  border: 1px solid #cccccc;
  text-align: center;
  margin: 0rpx 10rpx;
}

.btn-msg{
  flex: 6;
  font-size: 24rpx;
  font-weight: bold;
}
.setting{
  flex: 1;
}
.setting .icon-shezhi{
  position: relative;
  top: -5rpx;
  font-size: 36rpx;
  height: 56rpx;
  line-height: 56rpx;
}
/* 弹窗样式 */

.authorize-window {
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw;
  height: 110vh;
  z-index: 1000;
  background: rgba(0, 0, 0, 0.5);
}

.window-wrapper {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  width: 570rpx;
  height: 470rpx;
  border-radius: 6rpx;
  background-color: #fff;
}

.win-tips {
  text-align: center;
  font-size: 34rpx;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eaeaea;
}

.win-content {
  padding: 50rpx;
}

.text {
  padding-bottom: 55rpx;
  font-size: 32rpx;
}

.get-authorize {
  background-color: #1aac1b;
  color: #fff;
  font-weight: bold;
}
