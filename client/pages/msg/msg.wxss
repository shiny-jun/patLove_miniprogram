/* pages/msg/msg.wxss */

.page {
  overflow: hidden;
  background-color: #eee;
  width: 100%;
  height: 100vh;
}

.item-wrapper {
  box-shadow: 0px 0px 4px 0px rgba(65, 47, 141, 0.2);
  margin-top: 30rpx;
}

.item {
  position: relative;
  border-bottom: 1rpx solid #eee;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  color: #999;
  font-size: 32rpx;
  background: #fff;
}

.item:last-child {
  border-bottom: none;
}

.item .icon-right {
  position: absolute;
  right: 20rpx;
  font-size: 24rpx;
}

.item .item-desc{
  margin-left: 20rpx;
}
