/* pages/articalDetail/articalDetail.wxss */
.head {}

.header {
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.left,
.right {
  flex: 1;
  display: flex;
  align-items: center;
}

.right {
  justify-content: flex-end;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 15px;
}

.avatar image {
  width: 80rpx;
}

.right .btn {
  width: 100rpx;
  padding: 0;
  height: 46rpx;
  line-height: 46rpx;
  font-size: 30rpx;
  background-color: #ffffff;
  border-radius: 46rpx;
  text-align: center;
}

.follow {
  border: 1rpx solid #b93634;
  color: #b93634;
}

.nofollow {
  border: 1rpx solid #999999;
  color: #999999;
}

.more-btn {
  margin-left: 20rpx;
}

.main {
  padding: 40rpx;
}

.title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.content {
  font-size: 28rpx;
  line-height: 36rpx;
}

.pat {
  padding-top: 10rpx;
  font-size: 24rpx;
  color: #eeb122;
}

.pat-title {
  font-weight: bold;
  color: #999999;
  padding-right: 15rpx;
}

.patList::after {
  content: '、';
  color:#999999;
}

.patList:last-child::after {
  content: ''
}

.time {
  padding-top: 20rpx;
  font-size: 24rpx;
  color: #999999;
}

.msg {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 20rpx 30rpx;
}

.location {
  font-size: 28rpx;

}

.control {
  display: flex;
  align-items: center;
}

.control>view {
  font-size: 28rpx;
  color: #999999;
  padding-left: 20rpx;
}

.iconfont {
  color: #999999;
  padding-right: 10rpx;
}

.comment-text {
  width: 100%;
  position: relative;
  margin-bottom: 20rpx;
}

.comment-text textarea {
  width: 90%;
  height: 100rpx;
  font-size: 28rpx;
  margin: auto;
  background-color: #eeeeee;
  border-radius: 10rpx;
  padding: 20rpx;
}

.submit-wrapper {
  width: 90%;
  margin: 0 auto 20rpx;
  height: 70rpx;
}

.submit-btn {
  /* position: absolute; */
  float: right;
  /* bottom: 10rpx;
    right: 30rpx; */
  /* margin-top: 20rpx; */
  padding: 0;
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  border-radius: 25rpx;
  background-color: #fcc954;
  border: none;
}

.submit-btn::after {
  border: none
}

.comment-list {
  border-top: 1rpx solid #eeeeee;
  padding: 0 20rpx 30rpx;
}

.comment-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
}

.comment-item:last-child {
  border-bottom: 0;
}

.comment-item .avatar{
  /* flex: 1; */
  /* width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden; */
  /* margin-right: 15px; */
}
.comment-item .name{
  flex: 1;
}

.top{
  display: flex;
  padding-bottom: 5rpx;
}
.username {
  flex: 3;
  font-weight: bold;
  font-size: 28rpx;
}
.content{
  font-size: 28rpx;
}
.comment-time{
  flex: 2;
  font-size: 24rpx;
  color: #999999;
  text-align: right;
}